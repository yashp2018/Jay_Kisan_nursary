  // Function to export data to CSV
  const exportToCSV = (data, filename) => {
    if (!data || data.length === 0) {
      alert('No data to export');
      return;
    }

    // Flatten the data structure for CSV
    const flattenedData = [];
    
    data.forEach(schedule => {
      schedule.groups.forEach(group => {
        group.varieties.forEach(variety => {
          flattenedData.push({
            'Schedule': schedule.name,
            'Start Date': new Date(schedule.startDate).toLocaleDateString(),
            'End Date': new Date(schedule.endDate).toLocaleDateString(),
            'Group': group.groupName,
            'Variety': variety.varietyName,
            'Total Seeds': variety.total,
            'Completed': variety.completed || 0,
            'Slot Number': variety.slotNumber || 'N/A',
            'Progress': `${Math.round(((variety.completed || 0) / variety.total) * 100)}%`
          });
        });
      });
    });

    if (flattenedData.length === 0) {
      alert('No data available to export');
      return;
    }

    // Extract headers from the first object
    const headers = Object.keys(flattenedData[0]);
    
    // Create CSV content
    let csvContent = headers.join(',') + '\n';
    
    // Add rows
    flattenedData.forEach(item => {
      const row = headers.map(header => {
        // Escape quotes and wrap in quotes
        const value = item[header] !== null ? item[header].toString().replace(/"/g, '""') : '';
        return `"${value}"`;
      });
      csvContent += row.join(',') + '\n';
    });

    // Create download link
    const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
    const url = URL.createObjectURL(blob);
    const link = document.createElement('a');
    link.setAttribute('href', url);
    link.setAttribute('download', `${filename}_${new Date().toISOString().split('T')[0]}.csv`);
    link.style.visibility = 'hidden';
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
  };
  
