                  <label className="block text-sm font-medium text-gray-700 mb-1">
                    End Date <span className="text-red-500">*</span>
                  </label>
                  <input
                    type="date"
                    name="endDate"
                    className="w-full p-2 border border-gray-300 rounded-md"
                    value={newSchedule.endDate}
                    onChange={handleDateChange}
                    min={newSchedule.startDate || new Date().toISOString().split('T')[0]}
                    required
                  />
                  <p className="text-xs text-gray-500 mt-1">
                    {newSchedule.startDate && newSchedule.endDate ? 
                      `Duration: ${Math.ceil((new Date(newSchedule.endDate) - new Date(newSchedule.startDate)) / (1000 * 60 * 60 * 24)) + 1} days` : 
                      'Select start and end dates (5 days total)'}
                  </p>
                </div>
                
                {scheduleError && (
                  <div className="text-red-500 text-sm mt-2">
                    {scheduleError}
                  </div>
                )}
              </div>

              <div className="mt-6 flex justify-end space-x-3">
                <button
                  type="button"
                  disabled={isSaving}
                  className="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed"
                  onClick={() => {
                    setModalView(null);
                    resetNewScheduleForm();
                  }}
                >
                  Cancel
                </button>
                <button
                  type="submit"
                  disabled={isSaving}
                  className="px-4 py-2 text-sm font-medium text-white bg-green-600 border border-transparent rounded-md hover:bg-green-700 disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center min-w-[120px]"
                >
                  {isSaving ? (
                    <>
                      <FaSpinner className="animate-spin mr-2" />
                      Creating...
                    </>
                  ) : 'Create Schedule'}
                </button>
              </div>
            </form>
            
            {/* Variety Form - Shows after schedule is created */}
            {modalView === 'add-variety' && (
              <div className="mt-8 pt-6 border-t border-gray-200 overflow-scroll h-50">
                <h3 className="text-lg font-medium text-gray-900 mb-4">
                  Add Varieties to Schedule: {newSchedule.name}
                </h3>
                
                {/* Group Information */}
                <div className="bg-gray-50 p-4 rounded-lg mb-6 ">
                  <h4 className="text-md font-medium text-gray-700 mb-3">Group Information</h4>
                  <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                      <label className="block text-sm font-medium text-gray-700 mb-1">
                        Group Name <span className="text-red-500">*</span>
                      </label>
                      <input
                        type="text"
                        name="groupName"
                        className="w-full p-2 border border-gray-300 rounded-md"
                        value={currentGroup.groupName}
                        onChange={handleGroupChange}
                        required
                      />
                    </div>
                    <div className="opacity-50">
                      <label className="block text-sm font-medium text-gray-700 mb-1">
                        Group ID (auto-generated)
                      </label>
                      <input
                        type="text"
                        className="w-full p-2 border border-gray-300 rounded-md bg-gray-100"
                        value={currentGroup.groupId}
                        readOnly
                      />
                    </div>
                  </div>
                </div>
                
                {/* Add Variety Form */}
                <div className="mb-6">
                  <h4 className="text-md font-medium text-gray-700 mb-3">Add New Variety</h4>
                  <form onSubmit={handleAddVariety} className="space-y-4">
                    <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                      <div>
                        <label className="block text-sm font-medium text-gray-700 mb-1">
                          Slot Number
                        </label>
                        <select
                          name="slotNumber"
                          className="w-full p-2 border border-gray-300 rounded-md"
                          value={newVariety.slotNumber}
                          onChange={handleVarietyChange}
                        >
                          <option value="">Select Slot</option>
                          {fixedLotNumbers.map(num => (
                            <option key={num} value={num}>Slot {num}</option>
                          ))}
                        </select>
                      </div>
                      <div>
                        <label className="block text-sm font-medium text-gray-700 mb-1">
                          Variety Name <span className="text-red-500">*</span>
                        </label>
                        <input
                          type="text"
                          name="varietyName"
                          className="w-full p-2 border border-gray-300 rounded-md"
                          value={newVariety.varietyName}
                          onChange={handleVarietyChange}
                          required
                        />
                      </div>
                      <div>
                        <label className="block text-sm font-medium text-gray-700 mb-1">
                          Total Seeds <span className="text-red-500">*</span>
                        </label>
                        <input
                          type="number"
                          name="total"
                          min="1"
                          className="w-full p-2 border border-gray-300 rounded-md"
                          value={newVariety.total}
                          onChange={handleVarietyChange}
                          required
                        />
                      </div>
                      <div>
                        <label className="block text-sm font-medium text-gray-700 mb-1">
                          Completed Seeds
                        </label>
                        <input
                          type="number"
                          name="completed"
                          min="0"
                          max={newVariety.total || ''}
                          className="w-full p-2 border border-gray-300 rounded-md"
                          value={newVariety.completed}
                          onChange={handleVarietyChange}
                        />
                      </div>
                    </div>
                    <div className="flex justify-end">
                      <button
                        type="submit"
                        className="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors"
                      >
                        Add Variety
                      </button>
                    </div>
                  </form>
                </div>
                
                {/* Added Varieties List */}
                {currentGroup.varieties.length > 0 && (
                  <div className="mb-6">
                    <h4 className="text-md font-medium text-gray-700 mb-3">
                      Added Varieties ({currentGroup.varieties.length})
                    </h4>
                    <div className="overflow-x-auto">
                      <table className="min-w-full divide-y divide-gray-200">
                        <thead className="bg-gray-50">
                          <tr>
                            <th className="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                              Slot
                            </th>
                            <th className="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                              Variety Name
                            </th>
                            <th className="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                              Total Seeds
                            </th>
                            <th className="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                              Completed
                            </th>
                            <th className="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                              Remaining
                            </th>
                          </tr>
                        </thead>
                        <tbody className="bg-white divide-y divide-gray-200">
                          {currentGroup.varieties.map((variety, index) => (
                            <tr key={index}>
                              <td className="px-4 py-2 whitespace-nowrap text-sm text-gray-500">
                                {variety.slotNumber || '-'}
                              </td>
                              <td className="px-4 py-2 whitespace-nowrap text-sm font-medium text-gray-900">
                                {variety.varietyName}
                              </td>
                              <td className="px-4 py-2 whitespace-nowrap text-sm text-gray-500">
                                {variety.total.toLocaleString()}
                              </td>
                              <td className="px-4 py-2 whitespace-nowrap text-sm text-gray-500">
                                {variety.completed.toLocaleString()}
                              </td>
                              <td className="px-4 py-2 whitespace-nowrap text-sm text-gray-500">
                                {(variety.total - variety.completed).toLocaleString()}
                              </td>
                            </tr>
                          ))}
                        </tbody>
                      </table>
                    </div>
                  </div>
                )}
                
                {/* Action Buttons */}
                <div className="flex justify-between pt-4 border-t border-gray-200">
                  <button
                    type="button"
                    onClick={() => setModalView('new-schedule')}
                    className="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50"
                  >
                    Back to Schedule
                  </button>
                  <div className="space-x-3">
                    <button
                      type="button"
                      onClick={resetNewScheduleForm}
                      className="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50"
                    >
                      Cancel
                    </button>
                    <button
                      type="button"
                      onClick={handleSaveGroup}
                      className="px-4 py-2 text-sm font-medium text-white bg-green-600 border border-transparent rounded-md hover:bg-green-700"
                      disabled={!currentGroup.groupName || currentGroup.varieties.length === 0}
                    >
                      Save Group & Close
                    </button>
                  </div>
                </div>
              </div>
            )}
          </div>
        </div>
      )}

      <header style={styles.header}>
        <h1 className="text-3xl md:text-4xl font-bold text-gray-800 flex items-center justify-center">
          <FaSeedling className="mr-3 text-green-600" />
          Sowing & Schedule Management
        </h1>
        <p className="mt-2 text-gray-600">Track and manage your sowing schedules efficiently</p>
      </header>

      <div className='flex flex-col overflow-scroll'>
        <div style={styles.scheduleHeader}>
          <div className="flex-1 min-w-[300px] flex gap-4">
            <button
              onClick={() => setModalView('new-schedule')}
              className="px-4 bg-green-500 text-white rounded-md hover:bg-green-600 transition-colors flex items-center whitespace-nowrap"
            >
              <FaPlus className="mr-2" /> New Notification Schedule
            </button>
            <div className="flex-1">
              <label htmlFor="schedule-select" className="block text-gray-700 font-semibold mb-2">
                Select Schedule
              </label>
              <select
                id="schedule-select"
                className="w-full p-2 border border-gray-300 rounded-md bg-white shadow-sm"
                value={selectedScheduleId}
                onChange={(e) => setSelectedScheduleId(e.target.value)}
              >
                <option value="">-- Select a Schedule --</option>
                {schedules.map(schedule => (
                  <option key={schedule._id} value={schedule._id}>
                    {schedule.name}
                  </option>
                ))}
              </select>
            </div>
          </div>

          {selectedSchedule && (
            <div className="flex-1 min-w-[300px] bg-white p-4 rounded-lg shadow-sm border border-gray-100">
              <div className="flex items-center justify-between">
                <h3 className="text-lg font-semibold text-gray-800">
                  üìã {selectedSchedule.name || 'Selected Schedule'}
                </h3>
                <span className="text-sm px-3 py-1 bg-blue-100 text-blue-800 rounded-full">
                  {varietyForms.length} forms available
                </span>
              </div>
            </div>
          )}
        </div>

        <div className='flex flex-row'>
          <div className='flex-1'>
            <div style={styles.card}>
              <div style={styles.cardHeader}>
                <span>üìù Data Entry Forms</span>
              </div>
              {varietyForms.length > 0 ? (
                varietyForms.map((variety) => {
                  const group = selectedSchedule.groups.find(g => 
                    g.varieties.some(v => v.varietyId === variety.varietyId)
                  );
                  return (
                    <VarietyForm
                      key={variety.varietyId}
                      group={group}
                      variety={variety}
                      onSubmit={handleSubmitVarietyForm}
                    />
                  );
                })
              ) : (
                <div className="text-center py-8 text-gray-500">
                  {selectedScheduleId 
                    ? "No varieties found for the selected schedule."
                    : "Please select a schedule to view available forms."
                  }
                </div>
              )}
            </div>
          </div>

          <div className="flex-1">
            <div style={styles.card}>
              <div style={styles.cardHeader}>
                <div className="flex items-center justify-between w-full">
                  <div className="flex items-center">
                    <span>üìÖ Sowing Schedules</span>
                    <span className="ml-2 px-2 py-1 text-xs bg-blue-100 text-blue-800 rounded-full">
                      {schedules.length} schedules
                    </span>
                  </div>
                  <button
                    onClick={() => exportToCSV(schedules, 'sowing_schedules')}
                    className="flex items-center px-3 py-1 text-sm text-white bg-green-600 rounded-md hover:bg-green-700 transition-colors"
                    title="Export to CSV"
                  >
                    <FaFileExport className="mr-1" /> Export CSV
                  </button>
                </div>
                <span className="text-sm font-normal text-gray-500">
                  Last updated: {new Date().toLocaleDateString()}
                </span>
              </div>
              <div className="space-y-4 max-h-[600px] overflow-y-auto pr-2">
                {schedules.map(schedule => (
                  <ScheduleCard 
                    key={schedule._id} 
                    schedule={schedule}
                    isSelected={selectedScheduleId === schedule._id}
                    onSelect={() => setSelectedScheduleId(schedule._id)}
                  />
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  );
};

export default NotificationPage;
