// Helper function to format date range
const formatRange = (start, end) => {
  try {
    const s = new Date(start);
    const e = new Date(end);
    const opts = { day: 'numeric', month: 'short' };
    return `${s.toLocaleDateString("en-GB", opts)} - ${e.toLocaleDateString("en-GB", opts)}`;
  } catch {
    return `${start} - ${end}`;
  }
};

const ScheduleCard = ({ schedule, isSelected, onSelect }) => {
  const periodHeader = schedule.name || formatRange(schedule.startDate, schedule.endDate);
  const varietiesFlat = schedule.groups.flatMap(g => g.varieties || []);
  const allCompleted = varietiesFlat.length > 0 && varietiesFlat.every(v => v.completed >= v.total);
  const badgeClass = allCompleted 
    ? 'bg-green-100 text-green-800' 
    : 'bg-orange-100 text-orange-800';
  const badgeText = allCompleted ? 'Completed' : 'In Progress';

  return (
    <div 
      className={`bg-white rounded-lg shadow-md overflow-hidden border ${
        isSelected ? 'ring-2 ring-blue-500 border-blue-300' : 'border-gray-100 hover:border-gray-200'
      } hover:shadow-lg transition-all duration-300 mb-4 cursor-pointer`}
      onClick={onSelect}
    >
      <div className="bg-gradient-to-r from-blue-600 to-blue-800 text-white p-4 flex justify-between items-center">
        <h3 className="text-lg font-semibold">{periodHeader}</h3>
        <span className={`px-3 py-1 rounded-full text-xs font-bold ${badgeClass}`}>
          {badgeText}
        </span>
      </div>
      <div className="p-4">
        {schedule.groups.map(group => (
          <div key={group.groupId} className="mb-4">
            <div className="font-medium text-sm mb-2 px-2 py-1 bg-gray-50 text-gray-700 rounded inline-flex items-center">
              <span className="w-2 h-2 bg-blue-500 rounded-full mr-2"></span>
              {group.groupName}
            </div>
            {group.varieties.map(variety => {
              const percent = variety.total > 0 ? (variety.completed / variety.total) * 100 : 0;
              const progressColor = percent === 100 ? 'bg-green-500' : 'bg-blue-500';
              return (
                <div key={variety.varietyId} className="mb-4 p-3 bg-white border border-gray-100 rounded-lg hover:bg-gray-50 transition-colors">
                  <div className="flex justify-between items-start mb-2">
                    <h4 className="font-medium text-gray-800">{variety.varietyName}</h4>
                    <span className="text-xs px-2 py-1 bg-blue-50 text-blue-700 rounded-full">
                      {variety.completed.toLocaleString("en-IN")}/{variety.total.toLocaleString("en-IN")}
                    </span>
                  </div>
                  <div className="text-xs text-gray-500 mb-2">
                    Lot Numbers: 1 to {FIXED_LOT_NUMBERS}
                  </div>
                  <div className="w-full bg-gray-100 rounded-full h-2.5">
                    <div 
                      className={`h-2.5 rounded-full ${progressColor} transition-all duration-500 ease-in-out`}
                      style={{ width: `${percent}%` }}
                    ></div>
                  </div>
                  <div className="flex justify-between mt-1">
                    <span className="text-xs text-gray-500">0%</span>
                    <span className="text-xs font-medium">{Math.round(percent)}%</span>
                    <span className="text-xs text-gray-500">100%</span>
                  </div>
                </div>
              );
            })}
          </div>
        ))}
      </div>
    </div>
  );
};

const VarietyForm = ({ group, variety, onSubmit }) => {
  const [lotNumber, setLotNumber] = useState('');
  const [rows, setRows] = useState([{ date: '', details: '' }]);

  const handleAddRow = () => {
    setRows([...rows, { date: '', details: '' }]);
  };

  const handleRowChange = (index, field, value) => {
    const newRows = [...rows];
    newRows[index] = { ...newRows[index], [field]: value };
    setRows(newRows);
  };

  const handleSubmit = (e) => {
    e.preventDefault();
    if (!lotNumber) {
      alert("Please select a Lot Number first.");
      return;
    }

    const validItems = rows.filter(row => row.date && row.details);
    if (validItems.length === 0) {
      alert("Please add at least one valid item before submitting.");
      return;
    }

    onSubmit({
      varietyId: variety.varietyId,
      lotNumber,
      items: validItems
    });

    // Reset form
    setLotNumber('');
    setRows([{ date: '', details: '' }]);
  };

  return (
    <form onSubmit={handleSubmit} className="mb-6 p-4 bg-white rounded-lg shadow-sm border border-gray-100">
      <div className="mb-4">
        <h3 className="text-lg font-semibold text-gray-800">
          {group.groupName} - {variety.varietyName}
        </h3>
      </div>
      
      <div className="mb-4">
        <label htmlFor={`lot-${variety.varietyId}`} className="block text-sm font-medium text-gray-700 mb-1">
          Select Lot Number
        </label>
        <select
          id={`lot-${variety.varietyId}`}
          className="w-full p-2 border border-gray-300 rounded-md"
          value={lotNumber}
          onChange={(e) => setLotNumber(e.target.value)}
          style={{ margin: '0.5rem 0 1rem 0' }}
        >
          <option value="">-- Select Lot --</option>
          {fixedLotNumbers.map(num => (
            <option key={num} value={num}>Lot No. {num}</option>
          ))}
        </select>
      </div>

      {rows.map((row, index) => (
        <div key={index} className="flex gap-2 mb-2">
          <input
            type="date"
            className="flex-1 p-2 border border-gray-300 rounded-md"
            value={row.date}
            onChange={(e) => handleRowChange(index, 'date', e.target.value)}
            style={{ margin: '0.5rem 0' }}
          />
          <input
            type="text"
            placeholder="Enter details"
            className="flex-1 p-2 border border-gray-300 rounded-md"
            value={row.details}
            onChange={(e) => handleRowChange(index, 'details', e.target.value)}
            style={{ margin: '0.5rem 0' }}
          />
        </div>
      ))}

      <div className="flex gap-2 mt-4">
        <button
          type="button"
          onClick={handleAddRow}
          className="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors"
        >
          <FaPlus className="inline mr-1" /> Add Row
        </button>
        <button
          type="submit"
          className="px-4 py-2 bg-green-500 text-white rounded-md hover:bg-green-600 transition-colors flex-1"
        >
          <FaPaperPlane className="inline mr-1" /> Submit Data
        </button>
      </div>
    </form>
  );
};

